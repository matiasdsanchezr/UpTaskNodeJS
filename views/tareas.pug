extends layout

block content
    .contenido-principal
        h1 #{nombrePagina} - #{proyecto.nombre}

        // Formulario para nueva tarea
        form.agregar-tarea(action=`/proyectos/${proyecto.url}/` method="post")
            .campo
                label(for="tarea") Tarea: 
                input.nombre-tarea#tarea(type="text" name="tarea" placeholder="Nombre tarea")
            .campo.enviar
                input.boton.nueva-tarea(type="submit", value="Agregar")

        // Listado de tareas
        .listado-pendientes
            ul
              if tareas.length
                each tarea in tareas
                    li.tarea(data-tarea=tarea.id)
                        p= tarea.tarea
                        .acciones
                            if tarea.estado
                                i.far.fa-check-circle.completo
                            else 
                                i.far.fa-check-circle
                            i.fas.fa-trash  
              else 
                p No hay tareas en este proyecto  

        // Avance del proyecto
        .avance 
            h2 Avance del Proyecto
            #barra-avance.barra-avance
                #porcentaje.porcentaje

        // Botones para modificar el proyecto
        .contenedor-acciones
            a(href=`/proyecto/editar/${proyecto.id}` class="boton") Editar Proyecto
            button#eliminar-proyecto(data-proyecto-url=proyecto.url type="button" 
            class="boton eliminar") Eliminar Proyecto